# 6.
liczba1 = float(input("wprowadz pierwsza liczbe: ")) #komentarz do typu liczby. Powinien być to typ float, ponieważ funkcja ** lub pow() nie obsługuje typu str, a użytkownik może wpisać dowolną liczbę
liczba2 = float(input("wprowadz druga liczbe, rozna od 0: ")) #żeby skomentować wiele linii kodu, trzeba w każdej z nich użyć "#", w przeciwieństwie do C++ gdzie wystarczy /* */
if(liczba2 != 0 and ((liczba1 > 0 and liczba2 > 0) or (liczba1 >= 0 and liczba2 < 0) or (liczba1 <= 0 and liczba2 > 0))):
    liczba2 = abs(liczba2)
    liczba1 = abs(liczba1)
    print("suma: ", liczba1 + liczba2) 
    print("roznica: ", liczba1 - liczba2)
    print("iloczyn: ", liczba1 * liczba2)
    if(liczba1 * liczba2 == 10):
        print("Yay!")
    print("iloraz: ", liczba1/liczba2)
    print("kwadrat liczby 1: ", float(liczba1)**2, ", kwadrat liczby 2: ", float(liczba2)**2)
    print("pierwiastek kwadratowy liczby 1: ", float(liczba1)**(1/2), ", pierwiastek kwadratowy liczby 2: ", float(liczba2)**(1/2))
elif(liczba1 < 0 and liczba2 < 0):
    print("obydwie liczby nie moga byc ujemne.")
else:
    print("nie mozna dzielic przez 0.")
# 7.
print("wprowadz 2 liczby jako zakres: ")
x = int(input())
y = int(input()) #Po kolei, w kolejnych linijkach.
size = abs(y - x) + 1
if(x < y):
    x = x
    y = y
else:
    pom = x
    x = y
    y = pom
lista = []
i = 0
for i in range (size):
        lista.append(x + i)
        #print(lista[i])
if(size <= 20):
    while i >= 0: #nie musi być tej pętli, wystarczy że po "lista.append(x + i)" wpisze się print(lista[i]) i oczywiście element wypisujący wartości z listy umieści się w pętli po sprawdzeniu warunku if(size <= 20)
        print(lista[size - 1 - i]) #musi być size - 1, ponieważ dla np. size = 7 i = 6 po ukończeniu wcześniejszej pętli
        i -= 1
else:
    if(size % 2 != 0): #ilość liczb jest nieparzysta
        indeks = int((size - 1) / 2) #będzie potrzebny do określenia miejsca w którym znajdują się wartości najbliżej średniej na liście np. y - x = 7 więc środkowe miejsce zajmuje indeks 3 (licząc od 0) (7-1)/2 = 3
        print(lista[indeks - 3], lista[indeks - 2], lista[indeks - 1], lista[indeks + 1], lista[indeks + 2], lista[indeks + 3]) #wypisanie 6 liczb leżących najbliżej średniej
    if(size % 2 == 0): #ilość liczb jest parzysta
        indeks = int((size) / 2 - 1) #np. jeśli liczb jest 8 to nie istnieje środkowe miejsce, ale można ustawić indeks "na lewo od środka" 8/2 - 1 = 3. Wtedy trzeba wypisać następujące elementy:
        print(lista[indeks - 2], lista[indeks - 1], lista[indeks], lista[indeks + 1], lista[indeks + 2], lista[indeks + 3])
# 8.
wysokosc = int(input("podaj wysokosc choinki: "))
i = 0
j = 0
for i in range (wysokosc): #rysowanie choinki w poziomie
    if(i == 0):
        print((wysokosc - 1) * ' ', '|') #narysowanie szpica na czubku choinki
        continue
    print((wysokosc - 1 - i) * ' ', (2 * i + 1) * '*', (wysokosc - 1 - i) * ' ')
print((wysokosc - 1) * ' ', "U")

# 9.
pin = int(input("Ustaw PIN do operacji: "))
saldo = 2137
n = 1
while(n != 0):
    print("1. BANKOMAT \n", "2. WPLATOMAT \n", "3. SPRAWDZANIE SALDA \n", "0. WYJSCIE \n")
    n = int(input())
    while(n == 1):
        kwota = int(input("Podaj kwote, ktora chcesz wyplacic: "))
        haslo = int(input("Podaj kod PIN: "))
        if(haslo == pin):            
            if(kwota <= saldo):
                print("Pomyslnie wyplacono ", kwota)
                saldo -= kwota
                print("Na koncie zostalo: ", saldo)
            else:
                print("Nie masz wystarczajaco srodkow na koncie.")
        else:
            print("Podano zly PIN.")
        n = str(input("Czy chcesz kontynuowac? 'T/N'"))
        if(n == 'N' or n == 'n'):
            break
        elif(n == 'T' or n == 't'):
            n = 1
        else:
            break
    while(n == 2):
        kwota = int(input("Podaj kwote, ktora chcesz wplacic: "))
        haslo = int(input("Podaj kod PIN: "))
        if(haslo == pin):
            print("Pomyslnie wplacono ", kwota)
            saldo += kwota
            print("Na koncie znajduje sie: ", saldo)
        else:
            print("Podano zly PIN.")
        n = str(input("Czy chcesz kontynuowac? 'T/N'"))
        if(n == 'N' or n == 'n'):
            break
        elif(n == 'T' or n == 't'):
            n = 2
        else:
            break
    while(n == 3):
        haslo = int(input("Podaj kod PIN: "))
        if(haslo == pin):
            print("Na twoim koncie znajduje sie: ", saldo)
        else:
            print("Podano zly PIN.")
        n = str(input("Czy chcesz kontynuowac? 'T/N'"))
        if(n == 'N' or n == 'n'):
            break
        elif(n == 'T' or n == 't'):
            n = 3
        else:
            break
    if(n == 0):
        break

# 10. będzie jeszcze do poprawy bo na razie nie ma możliwości wprowadzania liczb ponownie
from random import*
print("Instrukcja obslugi kalkulatora: ")
print("wpisz liczby, na ktorych chcesz wykonac operacje, a nastepnie wybierz jeden z operatorow: '+' '-' '*' '/' '^' '#' 'x'")
print("Uwaga, w przypadku wybierania zakresu losowej liczby beda to 2 pierwsze wpisane z klawiatury.")
liczby = []
x = 0
while True:
    x = input()
    if ((x == '+') or (x == '-') or (x == '*') or (x == '/') or (x == '^') or (x == '#') or (x == 'x')):
        break
    else:
        liczby.append(float(x))

def kalkulator(liczby, x):
    wynik = 0
    i = 0
    if(x == '+'):
        for i in range(len(liczby)):
            temp = liczby[i]
            wynik += temp
    elif(x == '-'):
        wynik = liczby[0]       
        for i in range(1, len(liczby)): #indeks 0 jest juz wykorzystany do odjemnika, wiec wystarczy odejmowac liczby na miejscach 1, 2,... itd.
            temp = liczby[i]
            wynik -= temp
    elif(x == '*'):
        wynik = 1
        for i in range(len(liczby)):
            temp = liczby[i]
            wynik *= temp
    elif(x == '/'):
        wynik = liczby[0]
        for i in range(1, len(liczby)): #analogicznie do odejmowania
            if(liczby[i] == 0):
                print("Nie mozna dzielic przez zero!")
            else:
                temp = liczby[i]
                wynik = wynik / temp
    elif(x == '^'):
        for i in range(len(liczby)):
            temp = liczby[i]
            wynik = wynik ^ temp
    elif(x == '#'):
        for i in range(len(liczby)):
            if(liczby[i] < 0):
                print("Obsluga dzialan tylko na liczbach rzeczywistych!")
                break
            else:
                print("Pierwiastek z", i + 1, "liczby: ", liczby[i] ** (1/2))
    elif(x == 'x'):
        a = liczby[0]
        b = liczby[1]
        wynik = uniform(a, b) #losuje liczbę typu float w przedziale (a,b)

    return wynik
print(kalkulator(liczby, x))
